<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"

    >
    <RelativeLayout
        android:background="#1d1d1d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/img_news"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/img_item_news"
            android:scaleType="centerCrop"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img_news"
            android:layout_alignTop="@+id/img_news"
            android:layout_alignRight="@+id/img_news"
            android:layout_alignBottom="@+id/img_news"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="-1dp"
            android:layout_marginBottom="-1dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title_news"
                android:layout_width="38dp"
                android:layout_height="23dp"
                android:layout_margin="1dp"
                android:text="News"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.042"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.606"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/tv_time_news"
                android:layout_width="133dp"
                android:layout_height="20dp"
                android:text="07 Jun 2023"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.097"
                app:layout_constraintStart_toEndOf="@+id/tv_title_news"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.597"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_content_news"
                android:layout_width="280dp"
                android:layout_height="34dp"
                android:layout_margin="@dimen/dp_8"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:text="Lorem ipsum dolor sit amet consectetur. Vel in faucibus mauris ac quis egestas."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.084"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.882"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_description"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet consectetur. Vel in faucibus mauris ac quis egestas.quis egestas.quis egestas.quis egestas.quis egestas.quis egestas ... See more"
        android:layout_below="@id/img_news"
        android:textColor="@color/white"
        android:textSize="15dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>